    <!-- Main content -->
    <main class="relative z-10 flex flex-col items-center justify-center h-[100dvh] px-6 py-8">
      <!-- Hero Section -->
      <div class="text-center max-w-4xl mx-auto">
        <!-- Logo / Brand -->
        <div class="mb-4 animate-slide-in">
          <div class="inline-flex items-center gap-3 glass rounded-full px-5 py-2 mb-4">
            <div class="w-8 h-8 tennis-ball rounded-full animate-pulse-glow"></div>
            <span class="text-xl font-bold tracking-tight">Social Tennis Club</span>
          </div>
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl md:text-6xl font-extrabold mb-4 animate-slide-in delay-100 opacity-0" style="animation-fill-mode: forwards;">
          <span class="block text-white/90">Play More.</span>
          <span class="block bg-gradient-to-r from-lime-300 via-green-300 to-emerald-300 bg-clip-text text-transparent">
            Together.
          </span>
        </h1>

        <!-- Subtitle -->
        <p class="text-base md:text-lg text-white/70 mb-4 max-w-2xl mx-auto animate-slide-in delay-200 opacity-0" style="animation-fill-mode: forwards;">
