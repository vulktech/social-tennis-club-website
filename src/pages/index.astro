        </p>

        <!-- Coming Soon Badge -->
        <div class="animate-slide-in delay-300 opacity-0" style="animation-fill-mode: forwards;">
          <div class="inline-flex items-center gap-2 bg-lime-400/20 border border-lime-400/30 rounded-full px-4 py-1.5 mb-4">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lime-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-lime-400"></span>
            </span>
            <span class="text-lime-300 font-semibold tracking-wide uppercase text-sm">Coming Soon</span>
          </div>
        </div>

        <!-- Features Preview -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4 max-w-3xl mx-auto animate-slide-in delay-500 opacity-0" style="animation-fill-mode: forwards;">
          {features.map((feature, index) => (
            <div class="glass rounded-xl p-3 hover:bg-white/15 transition-all duration-300 group cursor-default">
              <div class="text-2xl mb-1 group-hover:scale-110 transition-transform duration-300">
                {feature.icon}
              </div>
              <h3 class="font-semibold text-white/90 text-sm mb-1">{feature.title}</h3>
              <p class="text-xs text-white/50">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Bottom Section -->
